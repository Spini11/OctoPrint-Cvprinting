<div id="cvprinting_sidebar">
    <div id="currentStatus" style="display: none;">
        <span id="ConfidenceText">Current Error confidence:</span>
        <span id="ConfidenceColorStatus" style="color: #000; font-size: 30px; vertical-align: middle;">&#8226;</span>
        <span id="ConfidenceValue">...</span> <span>%</span>
    </div>  
    <div id="disabled" style="display: none;">
        <span id="disabledText">Print issue detection is disabled</span>
    </div>
    <div id="notPrinting" style="display: none;">
        <span id="notPrintingText">There is nothing being printed right now</span>
    </div>
    <div id="notLoaded" style="display: block;">
        <span id="notPrintingText">Loading printing status...</span>
    </div>
    <div id="settings" style="padding-top: 5%;">
        <span id="settingsText" style="font-size: 18px; font-weight: bold; display: block; margin-bottom: 10px;">Settings</span>
        <form class="form-horizontal" style="display: flex; flex-direction: column; gap: 15px; padding-left: 10px;">
            <!-- Enable plugin -->
            <div style="display: flex; align-items: center; justify-content: space-between; gap: 10px;">
                <label class="EnablePluginSettingsLabel" for="enable_plugin" 
                       style="font-size: 14px; margin: 0;">Enable print issue detection</label>
                <input type="checkbox" id="enable_plugin" data-bind="checked: cvprintingEnabled" 
                       style="margin: 0; transform: translateY(1px);">
            </div>
            <!-- Pause on error -->
            <div style="display: flex; align-items: center; justify-content: space-between; gap: 10px;">
                <label class="PauseIssueSettingsLabel" for="pause_on_issue" 
                       style="font-size: 14px; margin: 0;">Pause on error</label>
                <input type="checkbox" id="pause_on_issue" data-bind="checked: pauseOnError" 
                       style="margin: 0; transform: translateY(1px);">
            </div>
    
            <!-- Pause confidence -->
            <div style="display: flex; align-items: center; justify-content: space-between; gap: 10px;">
                <label for="confidence_level" class="ConfidenceLevelSettingsLabel" 
                       style="font-size: 14px; margin: 0;">Pause confidence</label>
                <input type="number" id="confidence_level" min="0" max="100" step="5" data-bind="value: pauseConfidence"
                       style="width: 60px; font-size: 14px; text-align: right; margin: 0;">
            </div>
    
            <!-- Warning confidence -->
            <div style="display: flex; align-items: center; justify-content: space-between; gap: 10px;">
                <label for="warning_level" class="WarningLevelSettingsLabel" 
                       style="font-size: 14px; margin: 0;">Warning confidence</label>
                <input type="number" id="warning_level" min="0" max="100" step="5" data-bind="value: warningConfidence" 
                       style="width: 60px; font-size: 14px; text-align: right; margin: 0;">
            </div>
        </form>
    </div>
</div>

